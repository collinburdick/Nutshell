{
  "expo": {
    "name": "Nutshell",
    "slug": "nutshell",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "nutshell",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.nutshell.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Nutshell needs microphone access to capture session discussions for transcription and summarization."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#D97706",
        "foregroundImage": "./assets/images/icon.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.nutshell.app",
      "permissions": ["RECORD_AUDIO"]
    },
    "web": {
      "output": "single",
      "favicon": "./assets/images/icon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#FFFBEB",
          "dark": {
            "backgroundColor": "#1C1917"
          }
        }
      ],
      "expo-web-browser"
    ],
    "experiments": {
      "reactCompiler": true
    }
  }
}
